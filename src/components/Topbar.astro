---
import Logo from "./logo.astro";
import Menu from "./menu.astro";
import ThemeToggle from "./themeToggle.astro";
import BLlogo from "/BL-logo.png"
---

<nav id="topbar">
    <div
        class="flex justify-between items-center pt-8 w-[90vw] mx-auto lg:w-[900px]"
    >
        <!-- <Logo /> -->
        <img src={BLlogo} class="w-[50px] h-[30px] aspect-square rounded-lg mt-2" alt="BL-logo" />
        <ThemeToggle/>
        <Menu/>
    </div>
</nav>
<script>
    const topbar = document.getElementById("topbar");
    window.addEventListener("scroll", () => {
        if (window.scrollY >= 130) topbar.classList.add("bordered");
        else topbar.classList.remove("bordered");
    });
</script>
